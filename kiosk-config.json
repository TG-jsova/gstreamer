{
    "fps": 30,
    "width": 1920,
    "height": 1080,
    "bitrate": 8000,
    "keyframe_interval": 1,
    "segment_duration": 1,
    "output_dir": "/tmp/hls",
    "max_restarts": 15,
    "restart_delay": 60,
    "max_errors": 10,
    "error_window": 600,
    "encoder": "auto",
    "screen": 1,
    "real_time": {
        "enabled": true,
        "min_fps": 30,
        "target_latency_ms": 100,
        "buffer_size": 0.1,
        "drop_frames": true,
        "sync_tolerance_ms": 50
    },
    "live_streaming": {
        "enabled": true,
        "max_segments": 3,
        "emergency_segments": 1,
        "cleanup_threshold_percent": 70,
        "emergency_cleanup_threshold_percent": 85
    },
    "unity_optimization": {
        "enabled": true,
        "gpu_memory_limit_mb": 2048,
        "cpu_quota_percent": 50,
        "memory_limit_mb": 1200,
        "disk_cleanup_threshold_percent": 70,
        "emergency_cleanup_threshold_percent": 85
    },
    "monitoring": {
        "check_interval_seconds": 30,
        "health_metrics_history_size": 1000,
        "error_events_history_size": 100,
        "log_rotation_mb": 50
    },
    "performance": {
        "low_latency_mode": true,
        "hardware_acceleration": true,
        "thread_count": 2,
        "buffer_size": 1024
    }
} 